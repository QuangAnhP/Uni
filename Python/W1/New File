Ctemp = float(input("Please enter a temperature in Celcuis: "))
Ftemp = Ctemp * 9/5 + 32
print(f"The temperature in Farenheit is: {Ftemp}")

Ftemp = float(input("Please enter a temperature in Farenheit: "))
Ctemp = (Ftemp - 32) * 5/9
print(f"The temperature in Celcius is: {Ctemp}")

